<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.smsreminder.modelo">
	<class name="org.openmrs.module.smsreminder.modelo.Message" table="message" batch-size="25">
		<id name="messageId" type="int" column="message_id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="message_id" insert="false" />
		<property name="type" type="java.lang.String" column="type" length="20"/>
		<property name="action" type="java.lang.String" column="action" length="20"/>
		<property name="days" type="int" column="days"/>
		<property name="messageDescription" type="java.lang.String" column="messageDescription" length="256" />
		<property name="dateCreated" type="java.util.Date" column="created" not-null="true" length="19" />
		</class>
</hibernate-mapping>

